{
  "manifest_version": 3,
  "name": "TickerOneStock",
  "description": "实时悬浮气泡显示单只股票的最新价格与涨跌幅",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://qt.gtimg.cn/*",
    "https://hq.sinajs.cn/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "TickerOneStock"
  },
  "commands": {
    "toggle-enabled": {
      "description": "切换显示/隐藏气泡"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["stocks.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
